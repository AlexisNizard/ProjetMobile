<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="14dp"
    android:background="#FDFAFF"
    tools:context=".view.activity.MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/offre"
        android:layout_width="match_parent"
        android:layout_height="290dp"
        android:background="@drawable/bg_carte_meme_fond2"
        android:elevation="10dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:paddingRight="10dp">


        <TextView
            android:id="@+id/titre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Alternance Développeur web - Montpellier (F/H)"
            android:layout_gravity="center"
            android:ellipsize="end"
            android:maxLines="2"
            android:paddingLeft="5dp"
            android:textColor="#000000"
            android:textSize="16dp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="@+id/offre"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/societe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Capgemini"
            android:layout_marginTop="3dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:paddingLeft="5dp"
            android:textColor="#000000"
            android:textSize="15dp"
            app:layout_constraintTop_toBottomOf="@+id/titre"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/adresse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:ellipsize="end"
            android:maxLines="1"
            android:layout_marginTop="3dp"
            android:paddingLeft="5dp"
            android:textColor="#000000"
            android:text="34000 Montpellier"
            android:textSize="15dp"
            app:layout_constraintTop_toBottomOf="@+id/societe"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/contrat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:ellipsize="end"
            android:text="CDD"
            android:maxLines="1"
            android:paddingLeft="5dp"
            android:layout_marginTop="3dp"
            android:textColor="#000000"
            android:textSize="15dp"
            app:layout_constraintTop_toBottomOf="@+id/adresse"
            app:layout_constraintStart_toStartOf="parent" />


        <TextView
            android:id="@+id/dateDebutFin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:ellipsize="end"
            android:maxLines="1"
            android:paddingLeft="5dp"
            android:text="Du 01/01/2023 au 28/02/2023"
            android:textColor="#000000"
            android:textSize="15dp"
            android:layout_marginTop="3dp"
            app:layout_constraintTop_toBottomOf="@+id/contrat"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/remuneration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:ellipsize="end"
            android:text="2200 € par mois"
            android:maxLines="1"
            android:paddingLeft="5dp"
            android:textColor="#000000"
            android:layout_marginTop="3dp"
            android:textSize="15dp"
            app:layout_constraintTop_toBottomOf="@+id/dateDebutFin"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:ellipsize="end"
            android:maxLines="4"
            android:layout_marginTop="15dp"
            android:text="Aliquam scelerisque interdum Aliquam scelerisque interdum Aliquam scelerisque interdum Aliquam scelerisque interdumAliquam scelerisque interdum Aliquam scelerisque interdum Aliquam scelerisque interdum Aliquam scelerisque interdum Aliquam scelerisque interdumAliquam scelerisque interdum Aliquam scelerisque interdum Aliquam scelerisque interdum Aliquam scelerisque interdum Aliquam scelerisque interdumAliquam scelerisque interdum Aliquam scelerisque interdum Aliquam scelerisque interdum Aliquam scelerisque interdum Aliquam scelerisque interdumAliquam scelerisque interdum "
            android:paddingLeft="5dp"
            android:textColor="#474747"
            android:textSize="14dp"
            app:layout_constraintTop_toBottomOf="@+id/remuneration"
            app:layout_constraintStart_toStartOf="parent"  />

        <TextView
            android:id="@+id/date_public"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:ellipsize="end"
            android:maxLines="1"
            android:paddingLeft="5dp"
            android:text="Offre publiée il y a 5 jours"
            android:textColor="#000000"
            android:textSize="14dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/description" />


    </androidx.constraintlayout.widget.ConstraintLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/offre"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="10dp">

        <ImageView
            android:id="@+id/edit"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/baseline_edit_24"
            android:layout_marginRight="9dp"/>

        <ImageView
            android:id="@+id/del"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/baseline_delete_forever_24"
            android:layout_marginLeft="9dp"/>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>