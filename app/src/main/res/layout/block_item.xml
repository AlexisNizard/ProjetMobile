<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="14dp"
    android:background="#FDFAFF"
    tools:context=".view.activity.MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/offre"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@drawable/bg_carte_meme_fond2"
        android:elevation="10dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:paddingRight="10dp">


        <TextView
            android:id="@+id/titre1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nom :"
            android:layout_gravity="center"
            android:ellipsize="end"
            android:maxLines="2"
            android:paddingLeft="5dp"
            android:textColor="#000000"
            android:textSize="16dp"
            app:layout_constraintTop_toTopOf="@+id/offre"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/nom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Capgemini"
            android:ellipsize="end"
            android:maxLines="1"
            android:paddingLeft="55dp"
            android:textColor="#000000"
            android:textSize="16dp"
            app:layout_constraintTop_toTopOf="@+id/offre"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/titre2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Prénom :"
            android:layout_marginTop="3dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:paddingLeft="5dp"
            android:textColor="#000000"
            android:textSize="16dp"
            app:layout_constraintTop_toBottomOf="@+id/nom"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/prenom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Capgemini"
            android:layout_marginTop="3dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:paddingLeft="75dp"
            android:textColor="#000000"
            android:textSize="16dp"
            app:layout_constraintTop_toBottomOf="@+id/nom"
            app:layout_constraintStart_toStartOf="parent"/>

        <Button
            android:elevation="10dp"
            android:id="@+id/rechercher_button"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/rechercher_button"
            android:text="Débloquer"
            android:textColor="#ffffff"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>