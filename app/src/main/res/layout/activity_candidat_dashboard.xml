<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FDFAFF"
    tools:context=".view.activity.MainActivity">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/footerFragment">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/banner"
                android:layout_width="0dp"
                android:layout_height="250dp"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:src="@drawable/bg_dashboard14"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_vertical_start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.08" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_vertical_end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.92" />


            <ImageView
                android:id="@+id/logout"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:src="@drawable/logout1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginRight="16dp"
                android:layout_marginTop="12dp"/>

            <ImageView
                android:id="@+id/logo"
                android:layout_marginTop="75dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="@id/guideline_vertical_start"
                android:src="@drawable/back_profile" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="@+id/logo"
                app:layout_constraintEnd_toEndOf="@+id/logo"
                app:layout_constraintStart_toStartOf="@+id/guideline_vertical_start"
                app:layout_constraintTop_toTopOf="@+id/logo"
                app:srcCompat="@drawable/profil" />


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_carte"
                android:layout_width="0dp"
                android:layout_height="90dp"
                android:background="@drawable/bg_carte"
                android:elevation="8dp"
                android:layout_marginTop="18dp"
                app:layout_constraintStart_toStartOf="@+id/guideline_vertical_start"
                app:layout_constraintEnd_toEndOf="@id/guideline_vertical_end"
                app:layout_constraintTop_toBottomOf="@id/logo"
                >


                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guideline_edittext_height"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintGuide_begin="0dp" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guideline_edittext_height_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintGuide_percent="1" />


                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guideline_img1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.25" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guideline_img2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.50" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guideline_img3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.75" />

                <ImageView
                    android:id="@+id/image1"
                    android:layout_width="46dp"
                    android:layout_height="46dp"
                    android:src="@drawable/top_btn_1"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/guideline_img1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/guideline_edittext_height" />

                <ImageView
                    android:id="@+id/image2"
                    android:layout_width="46dp"
                    android:layout_height="46dp"
                    android:src="@drawable/top_btn_2"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/guideline_img2"
                    app:layout_constraintStart_toStartOf="@+id/guideline_img1"
                    app:layout_constraintTop_toTopOf="@+id/guideline_edittext_height" />

                <ImageView
                    android:id="@+id/image3"
                    android:layout_width="46dp"
                    android:layout_height="46dp"
                    android:src="@drawable/top_btn_3"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/guideline_img3"
                    app:layout_constraintStart_toStartOf="@+id/guideline_img2"
                    app:layout_constraintTop_toTopOf="@+id/guideline_edittext_height" />

                <ImageView
                    android:id="@+id/image4"
                    android:layout_width="46dp"
                    android:layout_height="46dp"
                    android:src="@drawable/top_btn_4"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/guideline_img3"
                    app:layout_constraintTop_toTopOf="@+id/guideline_edittext_height" />



            </androidx.constraintlayout.widget.ConstraintLayout>


            <FrameLayout
                android:id="@+id/layout_carte2"
                android:layout_width="0dp"
                android:layout_height="65dp"
                android:background="@drawable/bg_icon"
                android:layout_marginTop="35dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:elevation="2pt"
                app:layout_constraintStart_toStartOf="@+id/guideline_vertical_start"
                app:layout_constraintEnd_toEndOf="@id/guideline_vertical_end"
                app:layout_constraintTop_toBottomOf="@id/layout_carte">


                <ImageView
                    android:id="@+id/image5"
                    android:layout_width="48dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="start"
                    android:layout_marginLeft="10dp"
                    android:elevation="3pt"
                    android:padding="3dp"
                    android:src="@drawable/ic_1" />


                <TextView
                    android:id="@+id/text1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Notifications"
                    android:textAlignment="center"
                    android:textSize="18sp"
                    android:layout_marginTop="22dp"
                    android:layout_marginLeft="68dp"
                    android:textColor="#0A3A9A"
                    android:textStyle="bold"/>



            </FrameLayout>

            <FrameLayout
                android:id="@+id/layout_carte3"
                android:layout_width="0dp"
                android:layout_height="65dp"
                android:background="@drawable/bg_icon"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:elevation="2pt"
                app:layout_constraintStart_toStartOf="@+id/guideline_vertical_start"
                app:layout_constraintEnd_toEndOf="@id/guideline_vertical_end"
                app:layout_constraintTop_toBottomOf="@id/layout_carte2">

                <ImageView
                    android:id="@+id/image6"
                    android:layout_width="48dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="start"
                    android:layout_marginLeft="10dp"
                    android:elevation="3pt"
                    android:padding="3dp"
                    android:src="@drawable/ic_2" />


                <TextView
                    android:id="@+id/text2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mes candidatures"
                    android:textAlignment="center"
                    android:textSize="18sp"
                    android:layout_marginTop="22dp"
                    android:layout_marginLeft="68dp"
                    android:textColor="#0A3A9A"
                    android:textStyle="bold"/>


            </FrameLayout>

            <FrameLayout
                android:id="@+id/layout_carte4"
                android:layout_width="0dp"
                android:layout_height="65dp"
                android:background="@drawable/bg_icon"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:elevation="2pt"
                app:layout_constraintStart_toStartOf="@+id/guideline_vertical_start"
                app:layout_constraintEnd_toEndOf="@id/guideline_vertical_end"
                app:layout_constraintTop_toBottomOf="@id/layout_carte3">

                <ImageView
                    android:id="@+id/image7"
                    android:layout_width="48dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="start"
                    android:layout_marginLeft="10dp"
                    android:elevation="3pt"
                    android:padding="3dp"
                    android:src="@drawable/ic_3" />


                <TextView
                    android:id="@+id/text3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mes emplois"
                    android:textAlignment="center"
                    android:textSize="18sp"
                    android:layout_marginTop="22dp"
                    android:layout_marginLeft="68dp"
                    android:textColor="#0A3A9A"
                    android:textStyle="bold"/>


            </FrameLayout>


            <FrameLayout
                android:id="@+id/layout_carte5"
                android:layout_width="0dp"
                android:layout_height="65dp"
                android:background="@drawable/bg_icon"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:elevation="2pt"
                app:layout_constraintStart_toStartOf="@+id/guideline_vertical_start"
                app:layout_constraintEnd_toEndOf="@id/guideline_vertical_end"
                app:layout_constraintTop_toBottomOf="@id/layout_carte4">

                <ImageView
                    android:id="@+id/image8"
                    android:layout_width="48dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="start"
                    android:layout_marginLeft="10dp"
                    android:elevation="3pt"
                    android:padding="3dp"
                    android:src="@drawable/ic_4" />


                <TextView
                    android:id="@+id/text4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="--------"
                    android:textAlignment="center"
                    android:textSize="18sp"
                    android:layout_marginTop="22dp"
                    android:layout_marginLeft="68dp"
                    android:textColor="#0A3A9A"
                    android:textStyle="bold"/>


            </FrameLayout>


            <TextView
                android:layout_width="1dp"
                android:layout_height="5dp"
                app:layout_constraintEnd_toEndOf="@id/guideline_vertical_end"
                app:layout_constraintTop_toBottomOf="@id/layout_carte5"
                />



        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>
    <fragment
        android:id="@+id/footerFragment"
        android:name="com.example.interimexpress.view.fragment.FooterCandidatFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="?attr/actionBarSize"
        app:layout_constraintTop_toBottomOf="@id/scrollView"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout="@layout/fragment_footer_candidat" />



</androidx.constraintlayout.widget.ConstraintLayout>
