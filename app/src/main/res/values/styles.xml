<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CustomDatePickerDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:datePickerStyle">@style/CustomDatePicker</item>
    </style>

    <style name="CustomDatePicker" parent="android:Widget.Material.Light.DatePicker">
        <item name="android:headerBackground">@color/colorPrimary</item>
        <item name="android:datePickerMode">calendar</item>
    </style>

    <style name="DatePickerDialogTheme" parent="android:Theme.Material.Light.Dialog">
        <item name="android:colorAccent">@color/bblue</item> <!-- This changes the color of the datepicker header and the calendar selector -->
        <item name="android:textColorPrimary">@color/black</item> <!-- This changes the color of the text in the datepicker dialog -->
        <item name="android:windowBackground">@color/white</item> <!-- This changes the color of the background of the datepicker dialog -->
    </style>

    <style name="MaterialChips" parent="@style/Widget.MaterialComponents.Chip.Action">
        <!-- ... -->
        <item name="chipBackgroundColor">@color/chip_color_selector</item>
        <item name="chipCornerRadius">11dp</item>
        <item name="chipStrokeColor">@color/black</item>
        <item name="chipStrokeWidth">1dp</item>

    </style>

    <style name="CustomAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@drawable/rounded_dialog_background</item>
        <item name="android:textColor">@color/black</item>
    </style>



</resources>